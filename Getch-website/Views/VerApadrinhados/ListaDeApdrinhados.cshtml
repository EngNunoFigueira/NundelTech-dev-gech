            {
               $("#MostrarFichaMedicaDoApadrinhado").modal('show');
               $("#loadingFchApadrinhado_3").hide();
            });
       }
</script>
<!--POP UP ACTUALIZAR REGISTROS-->
<script type="text/javascript">
    var ActualizarFichaApadrinhado = function (ID)
           {
                
                $("#loadingFchApadrinhado").show();
                $("#MostrarFichaParaActualizarDoApadrinhado").modal('show');

                var morada = 10;//document.getElementById("Morada").value;
                var bairro = 11;//document.getElementById("Provincia").value;
                var municipio = 12;//document.getElementById("Municipio").value;
                var provincia = 13;//document.getElementById("Provincia").value;
                var tipodocumento = 14;//document.getElementById("Tipodocumento").value;

                var numerodoc = 15;//document.getElementById("Numerodocumento").value;
                var validade = 16;//document.getElementById("validade").value;
                var emissao = 17;//document.getElementById("Emissao").value;

                var correioelectronico = 19;//document.getElementById("Correio").value;
                var telefone = 20;//document.getElementById("Telefone").value;
                var telemovel = 21;//document.getElementById("Telemovel").value;
                var numerofilhos = 18;//= document.getElementById("Numerofilhos").value;
             

                $('#CLRApadrinhado').click(function ()
                {
                    $.ajax({
                        type:'POST',
                        url: '/VerApadrinhados/ActualizarFichaDeApadrinhado',
                        data: {
                                 id: ID,
                                 idMorada: morada,
                                 idProvincia: provincia,
                                 IdMunicipio: municipio,
                                 idTipodocumento: tipodocumento,
                                 idNumerodocumento: numerodoc,
                                 idValidade: validade,
                                 idEmissao: emissao,
                                 idCorreio: correioelectronico,
                                 idTelefone: telefone,
                                 idTelemovel: telemovel,
                                 idNumerofilhos:numerofilhos,
                              },
                        success: function () { $("#loadingFchApadrinhado").hide(); }
                    });
                });
           }
</script>
<!--AJAX AND JAVASCRIPT APPLY FILTER-->
<script type="text/javascript">
    var AplicarFiltrosApadrinhados = function()
    {
        var filtro = document.getElementById("IdFiltroApadrinhado").value;
        $.ajax({
            type:'GET',
            url: '/VerApadrinhados/FiltrarRegistrosDeApadrinhados',
            dataType: 'html',
            cache: false,
            async: true,
            data:{id:filtro},
            success: function (data) { $('#NovosRegistrosDePadrinhos').html(data); }
            });
    }
</script>