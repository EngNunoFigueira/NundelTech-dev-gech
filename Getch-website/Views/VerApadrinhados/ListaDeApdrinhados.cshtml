<!--POP UP VER DETALHES-->
<script type="text/javascript">
    var DetalhesFichaApadrinhado = function (IDAdulto)
        {
            var url = "/VerApadrinhados/DetalhesPessoalDoApadrinho?id=" + IDAdulto;
               $("#DetalhesFichaDoApadrinhado").load(url, function () 
               {
                    $("#loadingFchApadrinhado").hide();
                    $("#MostrarDetalhesFichaDoApadrinhado").modal('show');
               });
       }
</script>
<!--POP UP VER FICHA MEDICA-->
