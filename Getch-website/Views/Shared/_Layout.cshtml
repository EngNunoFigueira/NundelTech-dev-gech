<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Getch</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="author" content="Nundel Technologies" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="../../Scripts/jquery-ui-1.8.20.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.11.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="../../Scripts/my_code.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.4.4.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- riot tags -->
    <script type="riot/tag" src="~/Views/Componentes-Riot/sample.tag">
    </script>

    <!-- scripts we need -->
    <script src="https://cdn.jsdelivr.net/riot/3.5/riot+compiler.min.js"></script>
    <script src="https://rawgit.com/riot/riot/master/riot%2Bcompiler.min.js"></script>
    <script src="mixin.js"></script>

    <!-- mount this app -->
    <script>
      riot.compile(function() {
        riot.mount('*')
      })
    </script>

</head>
<body>
    <div id="header">
        <!------ Header ------>
        <div class="content-wrapper">
            <div id="logo">
                <a href="/">
                    <img class="left" src="@Url.Content("/Images/NUNDEL_Assinatura_Completa_COR.png")" alt="System Deveolped by Nuno Figueira Project Manager of Nundel Technologies"
                         width="200" height="100" border="0" />
                </a>

                <h2>GECH</h2>
                <h5>GESTÃO DE CENTROS HUMANITARIOS</h5>
                <br />
            </div>
        </div>
    </div>
    <div class="clear">
    </div>
    <br />
    <br />
    <br />
    <div id="topmenu">
        <!------ Topmenu ------>
        <div class="content-wrapper">
            <ul class="topmenu right">
                <li @if (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "home" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "about") { <text> class="active" </text> }><a href="/Home/About">Sobre a Empresa</a></li>
                <li @if (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "home" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "index") { <text> class="active" </text> }><a href="/">Escritório</a></li>

                <li @if( (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registarapadrinhado") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdoapadrinhado")
                 ||ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registarkwendy") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdokwendy"
                 || ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registarfichamedica") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdafichamedica"
                 || ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registarpadrinho") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdopadrinho"
                 || ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registaracompanhmanetoescolar") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdoacompamentoescolar"
                 || ViewContext.RouteData.Values["Controller"].ToString().ToLower() == ("registararmazem") && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdoarmazem")
                { <text> class="active" </text> }>
                    Inscrições 
                    <ul>
                        <li><a href="/RegistarKwendy/GETDadosParaRegistarKwendy">Crianças</a></li>
                        <li><a href="/RegistarApadrinhado/DadosDoapadrinhado">Adultos</a></li>
                        <li><a href="/RegistarFichaMedica/DadosDaFichaMedica">Ficha Médica</a></li>  
                        <li><a href="/RegistarPadrinho/DadosDoPadrinho">Padrinhos/doadres</a></li>  
                        <li><a href="/ActualizarPlanoCurricular/DadosDoAcompanhmaentoEscolar">Plano escolar</a></li> 
                        <li><a href="/RegistarArmazem/DadosDoArmazem">Novo Armazem</a></li> 
                    </ul>
                </li>
                <li @if ( ( ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verkwendy" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "listadekwendy")
                  || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verapadrinhados" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "listadeapdrinhados")
                  || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verpadrinhos" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "verpadrinhos")
                  || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verstock" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "produtosemsotck")
                  || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verconsultasmedicas" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "consultamedica")
                  || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "verrequisicoes" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "verrequisicoes"))
                { <text> class="active" </text> }>
                    Processos
                    <ul>
                        <li><a href="/VerKwendy/ListaDeKwendy">Menores</li>
                        <li><a href="/VerApadrinhados/ListaDeApdrinhados">Adultos</li>
                        <li><a href="/VerPadrinhos/VerPadrinhos">Padrinhos</li>
                        <li><a href="/VerRequisicoes/VerRequisicoes">Requisições</li>
                        <li><a href="/VerConsultasMedicas/ConsultaMedica">Consultas Médicas </li>
                        <li><a href="/VerEventosMarcados/EventosMarcados">Agenda de Eventos </li>
                        <li><a href="/VerStock/ProdutosEmSotck">Produtos em stock </li>
                    </ul>
                </li>
                <li @if ( (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "registarproduto" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadodoproduto")
                         || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "registrarrequisicao" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdarequisicao")
                         || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "registareventodeangariacao" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdoeventodeangariacao")
                         || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "criarfichadecliente" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "registarnovocliente"))

                    { <text> class="active" </text> }>
                    Acção Social
                    <ul>
                        <li><a href="/RegistarProduto/DadodoProduto">Registar doações</a></li>
                        <li><a href="/RegistrarRequisicao/DadosDaRequisicao">Requisição de produto</a></li>
                        <li><a href="/RegistarEventoDeAngariacao/DadosDoEventoDeAngariacao">Registar novo evento</a></li>
                    </ul>
                </li>
                <li @if ((ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "registarconsultamedica" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "dadosdaconsultamedica")
                    || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "criarfichadeempregado" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "criarnovafichadeempregado")
                    ||(ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "empregado" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "empregado")
                    || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "empregado" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "fichadeempregado")
                    || (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "searchcar" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "searchcar"))
                { <text> class="active" </text> }>
                    Marcações
                    <ul>
                        <li><a href="/RegistarConsultaMedica/DadosDaConsultaMedica">Consulta Médica</a></li>
                        @*<li> <a href="/CriarFichaDeEmpregado/CriarNovaFichaDeEmpregado">Novo Registo</a></li>
                        <li><a href="/Empregado/Empregado">Ver Funcionários</a></li>*@
                        <li><a href="/Empregado/FichaDeEmpregado">Ficha de Empregado</a> </li>
                    </ul>
                </li>
                @*<li @if (ViewContext.RouteData.Values["Controller"].ToString().ToLower() == "registartestemunha" && ViewContext.RouteData.Values["Action"].ToString().ToLower() == "registartestemunha") { <text> class="active" </text> }>
                    Testemunhas
                    <ul>
                        <li><a href="/RegistarTestemunha/RegistarTestemunha">Registar</a></li>
                        <li><a href="/Testemunhas/Testemunhas">Testemunhas</a></li>
                        <li><a href="/CriarFichaDeEmpregado/CriarContrato">Fazer Contrato de Manutenção</a> </li>
                    </ul>
                </li>*@
            </ul>
        </div>
    </div>
    
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy;@DateTime.Now.Year - Nundel Technologies</p>
                </div>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>